from random import randint
print('-=-' * 24)
print('{}''{:^72}''{}'.format('\033[1:33m', 'Olá vamos jogar Pedra, Papel e Tesoura!', '\033[m'))
print('-=-' * 24)
jogar = str(input('Você quer jogar ? Digite "S" para Sim, e "N" para Não: ')).upper()
if jogar == 'N':
    print('O jogo está finalizado.')
elif jogar == 'S':
    partidas = int(input('O vencedor precisará ter quantas Vitórias para vencer o jogo? '))
    print('VAMOS COMEÇAR !')
else:
    print('Desculpe, Você deve escolher entre Sim ou Não para ter acesso ao jogo.')
    print('Infelizmente o jogo será finalizado. Reinicie o jogo e tente novamente.')
while jogar == 'S':
    escolha = str(input('\033[1:34m' + 'ESCOLHA PEDRA, PAPEL OU TESOURA: ' + '\033[m' + '\033[1:30m' + 'ou digite SAIR para encerrar o jogo:' + '\033[m')).upper()
    if escolha == 'PEDRA':
        num = 1
    elif escolha == 'PAPEL':
        num = 2
    elif escolha == 'TESOURA':
        num = 3
    elif escolha != 'TESOURA' != 'PAPEL' != 'TESOURA':
        num = 4
    elif escolha == 'SAIR':
        num = 5
    placarJogador = 0
    placarComputador = 0
    if num == 5:
        break
        print('O jogo foi finalizado.')
    pc = randint(1, 3)
    if num == 1 and pc == 1:
        print('Você escolheu PEDRA e o Computador escolheu PEDRA. Vocês EMPATARAM!')
    elif num == 1 and pc == 2:
        print('Você escolheu PEDRA e o Computador escolheu PAPEL. Você PERDEU!')
        placarComputador = placarComputador + 1
    elif num == 1 and pc == 3:
        print('Você escolheu PEDRA e o Computador escolheu TESOURA. Você GANHOU!!!!')
        placarJogador = placarJogador + 1
    elif num == 2 and pc == 1:
        print('Você escolheu PAPEL e o Computador escolheu PEDRA. Você GANHOU !!!!')
        placarJogador = placarJogador + 1
    elif num == 2 and pc == 2:
        print('Você escolheu PAPEL e o Computador escolheu PAPEL. Vocês EMPATARAM!')
    elif num == 2 and pc == 3:
        print('Você escolheu PAPEL e o Computador escolheu TESOURA. Você PERDEU!')
        placarComputador = placarComputador + 1
    elif num == 3 and pc == 1:
        print('Você escolheu TESOURA e o Computador escolheu PEDRA. Você PERDEU!')
        placarComputador = placarComputador + 1
    elif num == 3 and pc == 2:
        print('Você escolheu TESOURA e o Computador escolheu PAPEL. Você GANHOU!!!!')
        placarJogador = +1
    elif num == 3 and pc == 3:
        print('Você escolheu TESOURA e o Computador escolheu TESOURA. Vocês EMPATARAM!')
    elif placarJogador == (partidas - 1):
        break
        print('Fim de Jogo! Você GANHOU para o jogador de {} à {}'.format(placarJogador, placarComputador))
    elif placarComputador == (partidas - 1):
        break
        (print('Fim de Jogo! Você PERDEU para o computador de {} à {}'.format(placarComputador, placarJogador)))
    else:
        if num == 5:
            break
            print('O jogo foi finalizado.')
        elif num != 5:
            print('Escolha entre PEDRA, PAPEL e TESOURA!')
